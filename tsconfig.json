{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "baseUrl": "./src",
        "rootDir": "./",
        "outDir": "./build",
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "strict": true
    }
}
